{% comment %}
  Social Media Meta Tags
  Generates Open Graph and Twitter Card meta tags for better social sharing
{% endcomment %}

<!-- Open Graph Meta Tags -->
<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:title" content="{{ page_title | default: shop.name }}">
<meta property="og:type" content="website">
<meta property="og:description" content="{{ page_description | default: shop.description | strip_html | truncatewords: 160 }}">

{% if page_image %}
  <meta property="og:image" content="http:{{ page_image | img_url: '1200x630' }}">
  <meta property="og:image:secure_url" content="https:{{ page_image | img_url: '1200x630' }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
{% elsif product.featured_media %}
  <meta property="og:image" content="http:{{ product.featured_media | img_url: '1200x630' }}">
  <meta property="og:image:secure_url" content="https:{{ product.featured_media | img_url: '1200x630' }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
{% elsif collection.featured_image %}
  <meta property="og:image" content="http:{{ collection.featured_image | img_url: '1200x630' }}">
  <meta property="og:image:secure_url" content="https:{{ collection.featured_image | img_url: '1200x630' }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
{% elsif shop.brand.logo %}
  <meta property="og:image" content="http:{{ shop.brand.logo | img_url: '1200x630' }}">
  <meta property="og:image:secure_url" content="https:{{ shop.brand.logo | img_url: '1200x630' }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
{% endif %}

<!-- Twitter Card Meta Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ page_title | default: shop.name }}">
<meta name="twitter:description" content="{{ page_description | default: shop.description | strip_html | truncatewords: 160 }}">

{% if page_image %}
  <meta name="twitter:image" content="https:{{ page_image | img_url: '1200x630' }}">
{% elsif product.featured_media %}
  <meta name="twitter:image" content="https:{{ product.featured_media | img_url: '1200x630' }}">
{% elsif collection.featured_image %}
  <meta name="twitter:image" content="https:{{ collection.featured_image | img_url: '1200x630' }}">
{% elsif shop.brand.logo %}
  <meta name="twitter:image" content="https:{{ shop.brand.logo | img_url: '1200x630' }}">
{% endif %}

<!-- Product-specific meta tags -->
{% if product %}
  <meta property="og:type" content="product">
  <meta property="product:price:amount" content="{{ product.selected_or_first_available_variant.price | divided_by: 100.0 }}">
  <meta property="product:price:currency" content="{{ cart.currency.iso_code }}">
  <meta property="product:availability" content="{% if product.available %}in stock{% else %}out of stock{% endif %}">
  
  {% if product.vendor != blank %}
    <meta property="product:brand" content="{{ product.vendor }}">
  {% endif %}
  
  {% for tag in product.tags limit: 5 %}
    <meta property="product:tag" content="{{ tag }}">
  {% endfor %}
{% endif %}

<!-- Pinterest Rich Pins -->
{% if product %}
  <meta property="product:retailer_item_id" content="{{ product.id }}">
  <meta property="product:price:amount" content="{{ product.selected_or_first_available_variant.price | divided_by: 100.0 }}">
  <meta property="product:price:currency" content="{{ cart.currency.iso_code }}">
{% endif %}

<!-- Schema.org markup for Google+ -->
<meta itemprop="name" content="{{ page_title | default: shop.name }}">
<meta itemprop="description" content="{{ page_description | default: shop.description | strip_html | truncatewords: 160 }}">

{% if page_image %}
  <meta itemprop="image" content="https:{{ page_image | img_url: '1200x630' }}">
{% elsif product.featured_media %}
  <meta itemprop="image" content="https:{{ product.featured_media | img_url: '1200x630' }}">
{% elsif collection.featured_image %}
  <meta itemprop="image" content="https:{{ collection.featured_image | img_url: '1200x630' }}">
{% elsif shop.brand.logo %}
  <meta itemprop="image" content="https:{{ shop.brand.logo | img_url: '1200x630' }}">
{% endif %}